<!DOCTYPE html>
<html>
<head>
  <title>Enterprise</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= yield :stylesheet_contents %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_contents %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid nopad">
    <div class="navbar navbar-inverse nomarg">
      <div class="navbar-inner no-radius">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <i class="icon-list"></i>
        </a>
        <div class="navbar-inverse nav pull-left">
          <a class="btn btn-navbar child-menu" data-toggle="collapse" data-target=".nav-collapse2" style="margin-left: 0;">
            <i class="icon-home"></i>
          </a>
        </div>
        <div class="container">
          <div class="nav-collapse">
            <ul class="nav pull-right">
              <li class="active"><a href="#"><small>Home</small></a></li>
              <li>
                <%= link_to profiles_index_path do %>
                  <small>About Us</small>
                <% end %>
              </li>
              <li><a href="#"><small>Products</small></a></li>
              <li><a href="#"><small>Promotions</small></a></li>
              <li><a href="#"><small>Language</small></a></li>
              <li><a href="#"><small>Order</small></a></li>
              <li><a href="#"><small>Our Agents</small></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if params[:container].eql?("dashboard") %>
    <div class="container">
      <div class="span2 text-center padv-20">
        <%= image_tag "/assets/noImage.jpg" %>
      </div>
    </div>
  <% end %>
  <div class="container" style="width: 100%;">
    <%= yield %>
  </div>

</body>
</html>
