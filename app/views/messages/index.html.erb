<div class="container" id="contact-us-container">
  <div class="header-container">
    <%= image_tag "/assets/mail32.png" %>
    <h3>Contact Us</h3>
  </div>
  <div class="content-container span12 nomarg">
    <div class="row-fluid">
      <div class="content-left-container span6 nomarg">
        <%= form_for @message, url: contact_path, method: :post do |f| %>

        <% if @message.errors.any? %>
        <div class="alert">
          <div class="error_messages">
            <p><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</p>
            <ul>
              <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, placeholder: "your name please" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email, placeholder: "your email please" %>
        </div>
        <div class="field">
          <%= f.label :subject %><br />
          <%= f.text_field :subject, placeholder: "your subject please" %>
        </div>
        <div class="field">
          <%= f.label :message, "Message" %><br />
          <%= f.text_area :message, :rows => 4, placeholder: "your message please" %>
        </div>
        <div class="actions">
          <%= f.submit "Send Message", class: "btn btn-primary submit-message" %>
        </div>
        <% end %>
      </div>
      <div class="content-right-container">
      </div>
    </div>
  </div>
</div>
